{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all",
			"arrowParentheses": "always",
			"lineWidth": 80,
			"indentStyle": "tab",
			"bracketSpacing": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off",
				"useExportType": "off",
				"noUselessElse": "warn"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noForEach": "off"
			}
		}
	}
}