{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./build",
		"rootDir": "./src"
	},
	"exclude": [
		"./jest.config.ts",
		"./node_modules",
		"./tests",
		"./build"
	]
}